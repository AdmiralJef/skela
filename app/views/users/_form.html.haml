.center_form
  %dl
    %dt Username
    %dd= ajax_string 'username', @user

    %dt Avatar
    %dd
      - size = 75
      .avatar_box{ style: "width:#{size}px;height:#{size}px;background:#aaa;"}
        = avatar @user.avatar, 75
      = link_to 'Change Face', change_avatar_face_path, remote: true, method: :post
      = link_to 'Change Head', change_avatar_head_path, remote: true, method: :post
      = link_to 'Change Color', change_avatar_color_path, remote: true, method: :post

    - if superuser?
      %dt Privilege
      %dd= ajax_number 'privilege_level', @user

    %dt Favorite Color
    %dd= ajax_string 'favorite_color', @user

  %footer
    -# TODO fix css disaster
    .right{style: 'padding-top:14px;'}
      = link_to logout_path, id: 'logout_button', data: { remote: true, method: :delete, fade_content: true, swap_title: 'Authenticate'}, class: 'user_link link_2' do
        .toe.right Logout
        .toe.right= md_icon 'exit_to_app'
