if ($('#courses')) {
  $('#<%= @resource.class.to_s.underscore.pluralize %>').prepend('<%= j new_cruddy_resource @resource, true %>');
  var crud = find_crud('<%= @resource.class.to_s.underscore %>', <%= @resource.id %>);
  crud.addClass('selected');
  var thing = crud.find('.full');
  thing.slideDown();
  thing.find('input:not([type="hidden"]):eq(0)').focus();
} else {
  if ($('#page_title').html != '<%= current_course %>')
    $('#primary_nav').html('<%= j render 'layouts/primary_nav' %>');

  replaceContentAndDecloak('<%= j render file: 'cruddy/create.haml' %>');
}
