<% if current_user %>

  var notice  = '<%= notice %>';
  var content = '<%= j render partial: 'welcome/index' %>';
  var header  = '<%= j render partial: 'shared/header' %>';

  login_success(notice, content, header);

<% else %>
  $('.flash.alert').html('<%= flash[:alert] %>');
  $('.flash.alert').removeClass('hidden');
  setTimeout(function(){
    $('#login_button').val('Log in');
    $('.center_form_field input').removeClass('disabled');
  }, 300);

<% end %>
