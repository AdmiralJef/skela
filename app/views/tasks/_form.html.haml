.center_form
  .subject_container
    = ajax_subject 'subject', @task
  .notes_container
    = ajax_notes 'notes', @task


  -#.left= updated_field_at 'updated_at', @task
  -#%dl
  -#  %dt Complete
  -#  %dd= ajax_boolean 'complete', @task


  - unless @task.taskable.nil?
    %h3 Associated Records
    %ul
      - issue = @task.taskable
      %li= link_to issue.subject, edit_issue_path(issue), remote: true, class: 'nav_link'

  %footer
    = link_to trash_icon_right, task_path(@task), data: {method: :delete, remote: true, fade_content: true, swap_title: 'Tasks'}, class: 'destroy_task'
