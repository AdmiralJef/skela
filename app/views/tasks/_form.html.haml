.center_form
  .subject_container
    = ajax_subject 'subject', @task
  .notes_container
    = ajax_notes 'notes', @task

  %dl
    %dt Status
    %dd
      #task_status
        - case @task.status
          - when 'No Task'
            = @task.status
          - when 'Incomplete'
            = md_icon 'done'
            Incomplete
          - when 'Complete'
            = md_icon 'done'
            Complete
    %dt Assigned To
    %dd= @task.assignee

  -#.left= updated_field_at 'updated_at', @task
  -#%dl
  -#  %dt Complete
  -#  %dd= ajax_boolean 'complete', @task


  - unless @task.taskable.nil?
    %h3 Associated Records
    %ul
      - issue = @task.taskable
      %li= link_to issue.subject, edit_issue_path(issue), remote: true, class: 'nav_link'

  %footer
    = destroy_link @task
