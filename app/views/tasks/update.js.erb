var task = $('.cruddy_resource[data-resource-id=<%= @resource.id %>]');
task.find('.compact .subject').html('<%= @resource.subject.to_s == "" ? content_tag(:div, "Unnamed Task", class: "faint") : @resource.subject %>');

<% if @resource.complete %>
  task.find('.task_status').addClass('complete');
  path = '<%= task_complete_path @resource, false %>';
<% else %>
  task.find('.task_status').removeClass('complete');
  path = '<%= task_complete_path @resource %>';
<% end %>
task.find('.task_status').attr('href', path);
