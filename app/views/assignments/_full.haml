.subject_container
  = ajax_subject 'title', @resource


= edit_fields @resource, description: :text,
                         due_date: :date


%dl
  %dt Resources
  %dd
    %ul
      - @resource.resources.each do |resource|
        %li
          = render partial: 'resources/card', locals: { resource: resource, resourceful: @resource }

      = form_for @resource, url: add_resource_assignment_path(@resource), method: :post do |f|
        = f.text_field 'new_resource'
        = f.submit 'Add Resource'
%footer
  = collapse_button
  = destroy_link @resource, false

- autocomplete_source = (current_course.resources - @resource.resources).map{|r| r.description}.to_json
-#- binding.pry
:javascript
  $('#assignment_new_resource').autocomplete({ source: #{autocomplete_source} });
