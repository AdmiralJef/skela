#header.flex_box.flex
  %nav.flex_box.flex
    %ul#primary_nav.flex_box
      %li= primary_nav_link display: site_logo, path: welcome_path, title: 'Welcome'
      %li= primary_nav_link( display: 'Games',
                              path: games_tic_tac_toe_path,
                              title: 'Tic-Tac-Toe',
                              theme: 'games',
                              drop_down: { 'Tic-Tac-Toe' => games_tic_tac_toe_path,
                                           'Hi-Lo'       => games_hi_lo_path,
                                           '100-Puzzle'  => games_hundred_puzzle_path,
                                           'Quests'      => quests_path })

      %li= primary_nav_link( display: 'Trackers',
                              path: shifts_path,
                              theme: 'plants',
                              title: 'Shifts',
                              drop_down: { 'Shifts'    => shifts_path,
                                           'Tasks'     => tasks_path,
                                           'Items' => items_path,
                                           'Inventories' => inventories_path })
      %li= primary_nav_link( display: 'Developer',
                              path: issues_path,
                              title: 'Issues',
                              theme: 'developer',
                              drop_down: { 'Users'  => users_path,
                                           'Issues' => issues_path,
                                           'Log'    => developer_log_entries_path })
    .flex

    %nav#user_nav
      - if logged_in?
        = logged_in_text
        = link_to 'My Profile', my_profile_path, id: 'my_profile_link', class: "user_link link_1 #{'selected' if params[:controller] == 'users' && params[:action] == 'my_profile'}", data: { remote: true, fade_content: true, swap_title: 'My Profile' }
        = link_to 'Logout', logout_path, id: 'logout_button', data: { remote: true, method: :delete, fade_content: true }, class: 'user_link link_2'
      - else
        = link_to 'Login', login_path, id: 'login_link', class: 'nav_link', data: { remote: true, fade_content: true, swap_title: 'Log in' }
