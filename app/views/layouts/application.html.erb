<!DOCTYPE html>
<html>
  <head>
    <title>Skela</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div class="flash notice<%= ' hidden' if notice.nil? %>">
      <span class="vertical_middle"><%= notice %></span>
    </div>

    <div class="flash alert<%= ' hidden' if alert.nil? %>">
      <span class="vertical_middle"><%= alert %></span>
    </div>

<div class="developer_pad_wrapper center hidden">
  <!--<div id="developer_pad" class="hidden">-->
    yo what up developers
  <br>

  <ul class="god_buttons">
    <li>
      <%= trigger_flash_notice %>
    </li>
    <li>
      <%= trigger_flash_alert %>
    </li>
  </ul>
  <!--</div>-->
</div>
    <% unless params[:controller] == 'sessions' && params[:action] == 'new' || params[:controller] == 'users' && params[:action] == 'new' %>
      <div id="helmet">
        <%= header_left %>

        <div id="header_right">
          <% if current_user %>
            <%= logged_in_text %>
            <nav>
              <%= link_to 'Logout', logout_path, method: :delete %>
            </nav>
          <% else %>
          <nav>
            <%= link_to 'Sign up', signup_path %>
            <%= link_to 'Login', login_path %>
          </nav>
          <% end %>
        </div>
      </div>
    <% end %>
    <div id="container">
      <%= yield %>
    </div>

  </body>
</html>
