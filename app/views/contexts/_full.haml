.subject_container
  = ajax_subject 'name', @resource

%dl
  %dt Creator
  %dd= @resource.creator

%h3 Trackers
%ul{ id: "context_#{@resource.id}_trackers" }
  - @resource.trackers.each do |tracker|
    %li{ id: "tracker_#{tracker.id}" }
      = tracker.name
      = link_to md_icon('delete'), remove_tracker_context_path(@resource, tracker: tracker.id), remote: true, method: :post

= form_for @context, method: :post, url: add_tracker_context_path(@resource, tracker_id: nil), remote: true do |f|
  = select_tag :tracker, options_for_select(Tracker.all.collect{ |u| [u.name, u.id] }), id: 'new_tracker_id'
  = f.submit

%br
%br

- if session[:context].to_i == @context.id
  = link_to 'Deactivate Context', deactivate_context_path(@context), remote: true
- else
  = link_to 'Activate Context', activate_context_path(@context), remote: true

%footer
  = collapse_button
  = destroy_link @resource, false
