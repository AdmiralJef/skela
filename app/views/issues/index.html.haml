%h1 Issue Tracker

%table#issues
  %thead
    %tr
      %th #
      %th Issue
      %th Assignee
      %th Tester
      %th Status
      %th(colspan=3)

  %tbody
    - @issues.each do |issue|
      %tr
        %td= issue.number plain: true
        %td= issue.description
        %td= issue.assignee.username if issue.assignee
        %td= issue.tester.username if issue.tester
        %td= issue.completed ? 'Resolved' : 'Unresolved'
        %td= link_to 'Show', issue
        %td= link_to 'Edit', edit_issue_path(issue)
        %td= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Issue', new_issue_path
