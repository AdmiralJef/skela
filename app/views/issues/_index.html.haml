%h1 Issue Tracker

%table#issues
  %thead
    %tr
      %th #
      %th Issue
      %th Assignee
      %th Tester
      %th Status
      %th(colspan=3)

  %tbody
    - @issues.each do |issue|
      %tr{data: { issue_id: issue.id }}
        %td= issue.number plain: true
        %td= issue.description
        %td= issue.assignee.username if issue.assignee
        %td= issue.tester.username if issue.tester
        %td= issue.completed ? 'Resolved' : 'Unresolved'
        %td= link_to 'Edit', edit_issue_path(issue), class: 'edit_issue_link', remote: true
        %td= link_to 'Destroy', issue, method: :delete, class: 'destroy_issue', remote: true

%br
= link_to 'New Issue', new_issue_path, id: 'new_issue', remote: true
