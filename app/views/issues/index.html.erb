<h1>Issue Tracker</h1>

<table id="issues">
  <thead>
    <tr>
      <th>#</th>
      <th>Issue</th>
      <th>Assignee</th>
      <th>Tester</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.number %></td>
        <td><%= issue.description %></td>
        <td><%= issue.assignee.email if issue.assignee %></td>
        <td><%= issue.tester.email if issue.tester %></td>
        <td><%= issue.completed ? 'Resolved' : 'Unresolved' %></td>
        <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_issue_path %>
