.center_form
  -#.right= updated_field_at 'updated_at', @issue

  .subject_container
    = ajax_subject 'subject', @issue
  .notes_container
    = ajax_notes 'description', @issue


  #tasks_header
    %h4 Status
    .spacer
    %h4 Assigned To
  #tasks
    - if @issue.tasks
      - @issue.tasks.each do |task|
        = task_cards task, false, select: false
  = new_task_for @issue
  -#%br(style="clear:both;")
  -#%br(style="clear:both;")

  -#- unless @issue.tasks.empty?
    %h2 Tasks
    %ul#associated_tasks
      - @issue.tasks.each do |task|
        %li{ data: { id: task.id }}
          = link_to task.subject, edit_task_path(task), remote: true, class: 'nav_link'
          (
          = link_to 'x', issue_remove_task_path(issue_id: @issue.id, task_id: task.id), remote: true, method: :delete
          )
    -#%br
    -#
    -#= form_for @issue, method: :post, url: issue_add_task_path(@issue), remote: true do |f|
      - f.hidden_field :id
      - f.search_field :task_id, placeholder: 'Add Task'

  %dl
    %dt Category
    %dd= ajax_string 'category', @issue

    %dt Target Version
    %dd= ajax_string 'target_version', @issue



  %br
  %footer
    = destroy_link @issue
