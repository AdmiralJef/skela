- if request.format == :html
  .card_header
    %h2= params[:controller].titleize
.content{class: request.format == 'html' ? '' : 'invisible'}
  = cruddier_table @resources, id: 'courses'

  %br
  .center
    .new_crud_button
      = link_to md_icon('add_circle', true), send("new_#{params[:controller].singularize}_path"), remote: true, id: 'new_course_button', class: 'new_crud look_at_me'

  - if @resources.empty?
    #get_started
      %p= md_icon 'arrow_upwards'
      %p Welcome to Skela course tracking!
      %p Click the (+) icon to get started.

:javascript
  $(document).on('click', '.new_crud', function(){
    $('#get_started').fadeOut('fast');
  });
