= header_left

#header_right
  %nav

    = link_to 'Users', users_path, id: 'users_link', class: "#{'selected' if params[:controller] == 'users' && params[:action] == 'index'}", remote: true
    = link_to 'Issue Tracker', issues_path, id: 'issues_link', class: "#{'selected' if params[:controller] == 'issues'}", remote: true

    - if logged_in?
      = link_to logged_in_text, my_profile_path, id: 'my_profile_link', class: "#{'selected' if params[:controller] == 'users' && params[:action] == 'my_profile'}", remote: true
      = link_to 'Logout', logout_path, id: 'logout_button', remote: true, method: :delete
    - else
      = link_to 'Sign up', signup_path
      = link_to 'Login', login_path


