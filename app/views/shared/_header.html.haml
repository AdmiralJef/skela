= header_left

#header_right
  %nav

    = link_to 'Users', users_path, id: 'users_link', class: "#{'selected' if params[:controller] == 'users' && params[:action] == 'index'}", remote: true
    = link_to 'Issues', issues_path, id: 'issues_link', class: "#{'selected' if params[:controller] == 'issues'}", remote: true

    - if logged_in?
      %nav#user_nav
        = logged_in_text
        = link_to 'My Profile', my_profile_path, id: 'my_profile_link', class: "user_link link_1 #{'selected' if params[:controller] == 'users' && params[:action] == 'my_profile'}", remote: true
        = link_to 'Logout', logout_path, id: 'logout_button', remote: true, method: :delete, class: 'user_link link_2'
    - else
      = link_to 'Login', login_path


