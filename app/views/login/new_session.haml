#login_container_outer
  #login_container_inner
    #skul
      = avatar @user


    = form_tag create_session_path, remote: false do |f|
      = text_field_tag :username, nil, placeholder: 'Username', autofocus: true, autocomplete: 'off'
      = password_field_tag :password, nil, autocomplete: 'off', placeholder: 'Password'
      .errors
        - if flash[:error]
          = flash[:error]
      = submit_tag 'Log in', id: 'login_button'

#options
  = link_to 'Proceed as Guest', create_guest_account_path, class: 'inline', data: { swap_title: 'Authenticate', fade_content: true, method: :post }
  = link_to 'New to Skela?', signup_path
