- if request.format == :html
  .card_header
    %h2 Items

.content{class: request.format == 'html' ? '' : 'invisible'}
  - if @items
    .center
      = megatable 'Items', %w(name units description), @items

  %br
  .center
    = link_to 'New Item', new_item_path, remote: true, data: { fade_content: true, swap_title: 'New Item'}
